<div id="<%= dom_id message %>" class="message" 
                                data-categories-target="message" 
                                data-category="<%= message.category %>" 
                                data-user-id="<%= message.user.id %>"
                                data-latitude="<%= message.user.location.latitude %>"
                                data-longitude="<%= message.user.location.longitude %>">

  <p class="message">
    <strong><%= link_to message.user.pseudo, profile_user_path(message.user.id), data: {turbo_frame:"_top"} %>:</strong>
    <%= message.content %>
  </p>

</div>
